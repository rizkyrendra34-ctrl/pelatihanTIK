# Program ini membantu menjawab pertanyaan belajar sederhana

print("Halo! Saya Asisten Belajar ğŸ¤–")
print("Ketik 'keluar' untuk berhenti.\n")

while True:
    tanya = input("Kamu: ").lower()

    if tanya == "keluar":
        print("Chatbot: Sampai jumpa, semangat belajar ya!")
        break
    elif "halo" in tanya or "hai" in tanya:
        print("Chatbot: Halo juga! Ada yang mau kamu tanyakan hari ini?")
    elif "matematika" in tanya:
        print("Chatbot: Matematika itu seru! Misalnya 5 + 3 = ", 5 + 3)
    elif "motivasi" in tanya:
        print("Chatbot: Jangan takut salah, karena dari salah kita belajar ğŸ’ª")
    elif "terima kasih" in tanya:
        print("Chatbot: Sama-sama! Senang bisa membantu ğŸ˜Š")
    else:
        print("Chatbot: Maaf, saya belum tahu jawabannya. Coba pertanyaan lain ya.")
